FROM centos:6.10 as build

#
# repos
#
RUN \
   yum -y install \
      centos-release-scl \
      scl-utils \
      epel-release \
   && yum -y update

#
# tooling
#
RUN \
   yum -y install \
      devtoolset-8 \
      rh-git29 \
      python27 \
      python27-python-devel \
      python27-python-pip \
      ccache

#
# Useful packages
#
RUN yum -y install \
      wget \
      sudo

#
# Globus devel tools and dependencies
#
RUN yum -y install \
   autogen \
   autoconf \
   automake \
   cmake \
   cmake-gui \
   libtool-ltdl-devel \
   libtool \
   autogen-libopts-devel \
   openssl-devel \
   glibc-utils \
   libtirpc-devel \
   libtool-ltdl

# 
# setup scl for bash
#
RUN for i in $(scl -l); do echo "source scl_source enable $i" >> /etc/bashrc; done
SHELL [ "bash", "-c", "-l" ]

#
# Globus sdk and cli
#
RUN pip install --upgrade pip setuptools
RUN pip install globus-cli globus-sdk

#
# globus install GCS
#
COPY globus_setup_devel /tmp
RUN /tmp/globus_setup_devel

FROM build
CMD bash
LABEL maintainer=raila@illinois.edu                                                      
LABEL organization="NCSA SET Group: Storage Enabling Technologies Group, National Center for Supercomputing Applications"                                                         